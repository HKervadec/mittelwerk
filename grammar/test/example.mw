VOID maintainAltitude(DOUBLE goal){
	DOUBLE tl0, tl1;
	DOUBLE current_altitude;
	DOUBLE diff;
	
	API_GET{
		tl0 = GET_LVL(hover0);
		tl1 = GET_LVL(hover1);
		current_altitude = GET_ALTITUDE();
	}
	
	diff = (current_altitude - goal) / goal;
	
	tl0 = MAX(0, MIN(0.5, tl0 - diff));
	tl1 = tl0;
	
	SET_LVL(hover0, MAX(tl0, tl0));
	SET_LVL(hover1, tl1);
	SET_POD_ANGLE(1, PI);
}

DOUBLE test(INT n){
	INT i;
	DOUBLE result;
	
	i = 0;
	result = 0;
	
	WHILE(i < n){
		result = result + 1/n;
		i = i + 1;
	}
	
	RETURN result;
}

