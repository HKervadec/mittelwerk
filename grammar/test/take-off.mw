ShuttleA

main0 : th_main[0]
main1 : th_main[1]
hover0 : th_hover[0]
hover1 : th_hover[1]
pod0 : th_pod[0]
pod1 : th_pod[1]

/* Automata */


/* Take off */
STATE_1{
	START
	
	DOUBLE alti_start;
	DOUBLE a,b,c;

	API_GET{
		alti_start = GET_ALTITUDE();
		a, b, c = GET_SPEED();
	}
	
	IF(a == 0 ){
		SET_LVL(hover0, 1);
		SET_LVL(hover1, 1);
		SET_POD_ANGLE(1, PI/2);
		SET_POD_ANGLE(3, PI/2);
		SET_LVL(pod0, 1);
		SET_LVL(pod1, 1);
	}
	
	IF(alti_start > 100){
	GOTOGOTO STATE_2;
	}
}

STATE_2{
	DOUBLE alti_no_pod;
	
	API_GET{
		alti_no_pod = GET_ALTITUDE();
	}
	
	SET_LVL(main0, 1);
	SET_LVL(main1, 1);
	
	IF(alti_no_pod > 1500){
		GOTOGOTO STATE_3;
	}

}

STATE_3{
	FINAL

	SET_LVL(pod0, 0);
	SET_LVL(pod1, 0);

}